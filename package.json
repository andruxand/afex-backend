{
  "name": "afex-backend",
  "version": "1.0.0",
  "description": "Repositorio para prueba técnica de Afex backend",
  "main": "src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "start": "NODE_ENV=development node build/src/index.js",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=testing mocha -r ts-node/register test/**/*.test.ts --exit",
    "coverage": "nyc npm run test",
    "lint": "eslint --fix src --config .eslintrc.json --ext .js,.j,.ts,.tsx",
    "prettier": "prettier --write --config .prettierrc.json \"src/**/*.ts\"",
    "prepare": "husky install",
    "clean": "del build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:andruxand/afex-backend.git"
  },
  "keywords": [
    "api",
    "typescript",
    "nodejs",
    "rest"
  ],
  "author": "Adrián Herrera",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andruxand/afex-backend/issues"
  },
  "homepage": "https://github.com/andruxand/afex-backend/",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npm run prettier && npm run lint"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.1.0",
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.3",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/mocha": "9.1.1",
    "@types/morgan": "1.9.3",
    "@types/node": "18.7.18",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "chai": "4.3.6",
    "commitlint": "17.1.2",
    "del-cli": "5.0.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.0.2",
    "express": "4.18.1",
    "helmet": "6.0.0",
    "http-status-codes": "2.2.0",
    "morgan": "1.10.0"
  }
}
